
<div class="col-12 col-sm-6 col-mg-4 col-lg-3 my-2 d-block mx-auto bg-white">
 {{#if success_msg}}
    <div class="alert alert-info mt-4">{{success_msg}}</div>
  {{/if}}
  {{#if error_msg}}
  <div class="alert alert-danger">{{error_msg}}</div>
  {{/if}}

  <h2 class="text-center">Cadastro de produtos</h2>
  <div class="card-body form-group">
    <form action="/cadastro" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="Input1">Nome do produto: </label>
        <input type="text" name="nome" class="form-control" id="Input1" required>
        <label for="Input2">Pre√ßo: </label>
        <input type="number" name="preco" class="form-control" id="Input2" required>
        <input type="file" name="file" class="form-control-file mt-3" id="File1" required>

        <input type="submit" value="Cadastrar" class="btn btn-primary mt-3">
      </div>
    </form>
  </div>
</div>
  <div class="container m-2 d-block mx-auto">
    <div class="row">
      {{#each posts}}
        <div class="col-12 col-sm-6 col-mg-4 col-lg-3 my-2">
          <div class="card p-2 text-center">
            <img src="./images/{{dataValues.imagem}}">
            <h5>{{dataValues.nome}}</h5>
            <p>R$ {{dataValues.preco}},00</p><br>
            <div class="d-flex justify-content-center">
                <form action="/delete/{{dataValues.id}}&{{dataValues.imagem}}" method="post" enctype="multipart/form-data">
                <button type="submit" class="btn btn-danger m-2">Deletar</button>
                </form>
                <form action="/editar/{{dataValues.id}}">
                <button class="btn btn-success m-2">Editar</button>
                </form>
          </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

 
 
 